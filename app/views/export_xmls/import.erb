    <%= form.submit "Uvezi", class:"btn btn-success" %> <%= link_to "Prekid unosa", export_xmls_index_path, class: "btn btn-warning pull-right", data: { confirm: 'Jeste li sigurni da Å¾elite prekid unosa?' } %>
<% end %>